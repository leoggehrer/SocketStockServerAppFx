<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<FlowPane maxWidth="800.0" minWidth="800.0" prefHeight="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.htlleo.MainController">
   <children>
      <TextArea fx:id="txtContent" editable="false" prefHeight="523.0" prefWidth="790.0">
         <FlowPane.margin>
            <Insets />
         </FlowPane.margin></TextArea>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="50.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="5.0" prefHeight="15.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="5.0" prefHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
             <Label text="Port" GridPane.rowIndex="1" />
             <TextField fx:id="txtPort" GridPane.columnIndex="1" GridPane.rowIndex="1" />
             <Button fx:id="btnStart" onAction="#onStart" prefHeight="26.0" prefWidth="100.0" text="Start" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
             </Button>
             <Button fx:id="btnStop" onAction="#onStop" prefHeight="26.0" prefWidth="100.0" text="Stop" GridPane.columnIndex="3" GridPane.rowIndex="1">
                 <GridPane.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                 </GridPane.margin>
             </Button>
         </children>
         <FlowPane.margin>
            <Insets />
         </FlowPane.margin>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</FlowPane>
